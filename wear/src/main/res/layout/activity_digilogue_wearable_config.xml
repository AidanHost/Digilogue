<android.support.wearable.view.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context="com.greenman.digilogue.DigilogueWearableConfigActivity">

    <TextView
        android:id="@+id/background_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginTop="14dp"
        android:textSize="24sp"
        android:textColor="@color/config_activity_header_text_color"
        android:text="@string/basic_color_choice"
        android:fontFamily="sans-serif-condensed-light"
        app:layout_box="left|top"/>
    <android.support.wearable.view.WearableListView
        android:id="@+id/background_color_picker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        app:layout_box="left|right"/>
    <!--<CheckBox
        android:id="@+id/digital_format"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />-->
    <!--<android.support.wearable.view.WearableListView
        android:id="@+id/foreground_color_picker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        app:layout_box="left|right"/>-->

</android.support.wearable.view.BoxInsetLayout>
